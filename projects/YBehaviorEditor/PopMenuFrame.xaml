<UserControl x:Class="YBehavior.Editor.PopMenuFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YBehavior.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu DataContext="{Binding Menu}" Visibility="Collapsed">
            <Menu.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Width="20" Height="20" Text="{Binding Name}" />
                        <TextBlock FontSize="14" Text=">" Margin="2,0,0,0" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </Menu.ItemTemplate>

        </Menu>
    </Grid>
</UserControl>
