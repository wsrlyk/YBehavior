<UserControl x:Class="YBehavior.Editor.UIConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YBehavior.Editor.Core"
             mc:Ignorable="d" 
             >
    <Path Name="path" Stroke="#FFC8D0EA" StrokeThickness="3" Fill="#FFC8D0EA">
        <Path.Data>
            <PathGeometry>
                <PathFigure IsFilled="False" StartPoint="{Binding ParentPos, Mode=OneWay}"  IsClosed="False">
                    <LineSegment Point="{Binding ParentPos, Mode=OneWay}" />
                    <LineSegment Point="{Binding ChildPos, Mode=OneWay}" />
                </PathFigure>
            </PathGeometry>
        </Path.Data>
    </Path>
</UserControl>
