<UserControl x:Class="YBehavior.Editor.FSMTransitionListFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YBehavior.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel DataContextChanged="OnDataContextChanged">
        <ListBox Name="TransContainer" MaxHeight="200" SelectionChanged="TransContainer_SelectionChanged">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding Renderer.Name}"/>
                    </DockPanel>
                    <!--TextBlock Text = "{Binding Name}"/-->
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Width="20" Height="20" Click="DeleteTrans_Click" HorizontalAlignment="Right">
            -
        </Button>
        <local:FSMTransitionDataFrame x:Name="DataFrame"/>
    </StackPanel>
</UserControl>
