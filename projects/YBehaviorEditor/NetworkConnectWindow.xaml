<Window x:Class="YBehavior.Editor.NetworkConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YBehavior.Editor"
        mc:Ignorable="d"
        Title="Connect to IP" Height="250" Width="400"
        WindowStartupLocation ="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="30">
        <StackPanel Orientation="Horizontal" Margin="0, 10">
            <TextBlock Text="IP" Width="50"/>
            <TextBox Name="IP" Text="127.0.0.1" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0, 10">
            <TextBlock Text="Port" Width="50"/>
            <TextBox Name="Port" Width="50" Text="444"/>
        </StackPanel>
        <StackPanel Margin="0, 30">
            <Button Name="BtnOK" Width="50" Height="30" Click="BtnOK_Click">
                Connect
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
