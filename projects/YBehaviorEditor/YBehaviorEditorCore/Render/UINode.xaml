<UserControl x:Class="YBehavior.Editor.Core.UINode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YBehavior.Editor.Core"
             mc:Ignorable="d" 
             MinWidth="60" MinHeight="80">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Name="topConnectors" Orientation="Horizontal" HorizontalAlignment="Center">
        </StackPanel>
        <Border Name="border" Grid.Row="1" BorderThickness="3" BorderBrush="LightBlue" Background="DarkGray">
            <StackPanel Name="mainPanel">
                <TextBlock Name="name" Text="{Binding Path=NickName }"></TextBlock>
                <TextBlock Name="note" Text="lalalallffds"></TextBlock>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="2" Name="bottomConnectors" Orientation="Horizontal" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
