<UserControl x:Class="YBehavior.Editor.UIVariable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YBehavior.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <DockPanel Background="LightGray" Margin="2,2,2,2">
        <TextBlock Name="VKey" Text="{Binding Name}" FontSize="15" Width="90" DockPanel.Dock="Left"/>
        <ToggleButton Width="20" Height="20" Name="Switcher" Background="Orange" DockPanel.Dock="Right" Visibility="{Binding CanSwitchConst}" />
        <TextBox Name="VValue" MinWidth="110" Text="{Binding Value}"/>
    </DockPanel>
</UserControl>
