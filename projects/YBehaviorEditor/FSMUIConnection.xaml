<local:YUserControl x:Class="YBehavior.Editor.FSMUIConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YBehavior.Editor"
             mc:Ignorable="d" 
             >
    <Grid>
        <Path Name="path" Stroke="#FFDADCE4" StrokeThickness="5" Fill="#FFE1E3E8" TargetUpdated="Path_TargetUpdated">
            <Path.Data>
                <PathGeometry>
                    <PathFigure IsFilled="False" StartPoint="{Binding ParentPos, Mode=OneWay, NotifyOnTargetUpdated=True}" IsClosed="False">
                        <LineSegment Point="{Binding ChildPos, Mode=OneWay, NotifyOnTargetUpdated=True}" />
                    </PathFigure>
                    <PathFigure IsFilled="true" StartPoint="0,0"  IsClosed="true">
                        <LineSegment Point="-0.5,0.2" />
                        <LineSegment Point="-0.5,-0.2" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
</local:YUserControl>
