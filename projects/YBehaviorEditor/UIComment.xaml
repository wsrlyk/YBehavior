<UserControl x:Class="YBehavior.Editor.UIComment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YBehavior.Editor"
             mc:Ignorable="d" 
             MinWidth="60" MinHeight="80"
             Width="{Binding Geo.Rec.Width}" Height="{Binding Geo.Rec.Height}">
    <Border Name="border" BorderThickness="3" BorderBrush="#FFF5BEA4" Background="#FFF7E3B7">
        <Grid>
            <StackPanel Name="mainPanel">
                <TextBlock Name="name" Text="{Binding UITitle}"/>
                <TextBlock Name="content" Text="{Binding Data}"/>
            </StackPanel>
            <Rectangle Name="move" HorizontalAlignment="Left" Width="15" Height="15" VerticalAlignment="Top">
                <Rectangle.Fill>
                    <SolidColorBrush Color="DarkOrange" Opacity="0.6" />
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Name="resize" HorizontalAlignment="Right" Width="11" Height="11" VerticalAlignment="Bottom">
                <Rectangle.Fill>
                    <SolidColorBrush Color="DarkOrange" Opacity="0.6" />
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Border>
</UserControl>
